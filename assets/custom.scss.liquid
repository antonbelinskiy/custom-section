$xxl: 1920px;
$xl: 1440px;
$lg: 1200px;
$md: 990px;
$sm: 768px;
$xs: 576px;

$imageHeightXxl: 800px;
$imageHeightDesktop: 635px;
$imageHeightMobile: 375px;

@mixin title-font {
    font-size: 40px;
    line-height: 1;
    font-weight: 700;
    text-transform: uppercase;
    @media (max-width: $lg) {
        font-size: 30px;
    }
    @media (max-width: $md) {
        font-size: 28px;
    }
}

@mixin content-font {
    font-size: 16px;
    line-height: 1.3;
    font-weight: 400;
    @media (max-width: $lg) {
        font-size: 14px;
    }
}

.no-bullshit {
    .no-bullshit__title {
        @include title-font;
        letter-spacing: -0.01em;
        margin-bottom: 30px;
        text-align: center;
        margin-top: 0;
        padding: 0 12px;
    }
    .no-bullshit__banner {
        position: relative;
    }
    .swiper-navigaion {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        z-index: 1;
        display: flex;
        justify-content: space-between;
        padding: 0 60px;
        width: 100%;
        @media (max-width: $lg) {
            padding: 0 20px;
        }
        @media (max-width: $sm) {
            padding: 0 10px;
            top: calc(375px / 2);
        }
        @media (max-width: $sm) {
            padding: 0 2px;
        }
        .swiper-navigation-button {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 36px;
            height: 36px;
            user-select: none;
            border-radius: 4px;
            background-color: #0E0C0C;
            cursor: pointer;
            transition: all 0.3s ease;
            padding: 4px;
            svg {
                path {
                    transition: all 0.3s ease;
                }
            }
            &:hover {
                background-color: #fff;
                svg {
                    path {
                        stroke: #0E0C0C;
                    }
                }
            }
        }
    }
    .no-bullshit__banner-wrapper {
        display: flex;
        align-items: stretch;
        
        .no-bullshit__banner-slider {
            flex: 1 0 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            @media (max-width: $sm) {
                flex: 1 0 100%;
                width: 100%;
            }
            
            .swiper-wrapper {
                width: 100%;
            }
            
            .swiper-slide {
                height: auto;
                width: 100%;
                
                &[block-id] {
                    display: block;
                }
            }
        }
        
        .no-bullshit__banner-content {
            flex: 1 0 50%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 40px;
            @media (max-width: $sm) {
                flex: none;
                width: 100%;
                padding: 30px 0;
                gap: 25px;
            }
        }
        
        .no-bullshit__banner-item {
            position: relative;
            width: 100%;
            height: 100%;
        }
        
        .no-bullshit__banner-item-content {
            position: absolute;
            bottom: 20%;
            right: 20%;
            max-width: 335px;
            z-index: 1;
            text-align: center;
            @include content-font;
            @media (max-width: $md) {
                max-width: none;
                left: 0;
                right: 0;
                padding: 0 50px;
            }
            @media (max-width: $sm) {
                bottom: 15%;
            }
            &::before {
                content: "";
                position: absolute;
                width: 8px;
                height: 8px;
                left: 50%;
                top: 0;
                transform: translateX(-50%);
                background-color: currentColor;
                border-radius: 50%;
                display: block;
                margin-bottom: 10px;
            }
        }
        
        .no-bullshit__banner-item-image {
            position: relative;
            height: $imageHeightDesktop;
            width: 100%;
            overflow: hidden;
            @media (min-width: $xl) {
                height: $imageHeightXxl;
            }

            @media (max-width: $sm) {
                height: $imageHeightMobile;
            }
            
            &::before {
                content: "";
                display: block;
                padding-bottom: 100%;
                @media (max-width: $sm) {
                    padding-bottom: 75%;
                }
            }
            
            img {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                object-fit: cover;
                object-position: center;
                will-change: transform;
                backface-visibility: hidden;
                transform: translateZ(0);
            }
            
            .placeholder-svg {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
            }
        }
        .no-bullshit__banner-label {
            @include title-font;
            color: #fff;
            opacity: 0.4;
            transition: all 0.3s ease;
            cursor: pointer;
            border-bottom: 1px solid transparent;
            @media (max-width: $md) {
                font-size: 23px;
            }
            &:hover {
                opacity: 0.7;
            }
            &.active {
                opacity: 1;
                border-color: currentColor;
            }
        }
    }
}
.flex-row-left {
    flex-direction: row;
    @media (max-width: $sm) {
        flex-direction: column;
        align-items: center;
    }
}
.flex-row-right {
    flex-direction: row-reverse;
    @media (max-width: $sm) {
        flex-direction: column;
        align-items: center;
    }
}

.richtext {
    p {
        margin-bottom: 10px;
        &:last-child {
            margin-bottom: 0;
        }
    }
    li {
        margin-bottom: 8px;
        list-style: none;
        display: inline-block;
        text-align: left;
        position: relative;
        padding-left: 10px;
        &:before {
            content: "‚óè";
            color: currentColor;
            display: inline-block;
            margin-right: 5px;
        }
        &:last-child {
            margin-bottom: 0;
        }
    }
    ul {
        margin-bottom: 10px;
        padding-left: 0;
        &:last-child {
            margin-bottom: 0;
        }
    }
}